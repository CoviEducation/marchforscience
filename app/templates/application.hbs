<nav class="app--nav">
  {{#link-to 'index' class="app--nav__logo-link"}}
    <img class="app--nav__logo" src="/images/logo_color_inverse.png" alt="March for Science Logo"/>
    <span class="app--nav__title">March for Science</span>
  {{/link-to}}
  <ul class="app--nav__list">
    <li class="app--nav__listitem">{{#link-to 'index'}}Home{{/link-to}}</li>
    <li class="app--nav__listitem">{{#link-to 'labs'}}Labs{{/link-to}}</li>
    <li class="app--nav__listitem">{{#link-to 'about'}}About{{/link-to}}</li>

    <li class="app--nav__listitem hide-for-mobile">
      {{#if session.isLoggedOut}}
        {{#link-to 'login' class="app__nav--profilelink"}}Log In{{/link-to}}
      {{else}}
        {{#link-to 'profile' class="app__nav--profilelink"}}<img src={{transparent-pixel}} style="background-image: url({{session.user.image}});" alt="Profile Edit" class="auth__nav-image">{{/link-to}}
      {{/if}}
    </li>

  </ul>
</nav>

{{notification-container}}

<main class="app--main">
  {{outlet}}
</main>

<footer class="app--footer">

  <section class="u-grid-container">
    <div id="google_translate_element"></div>
    <script type="text/javascript">
      function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
      }
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
  </section>

</footer>